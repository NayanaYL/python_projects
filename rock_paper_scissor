import random
print('lets play rock paper scissor')
user_input=int(input('enter the 0:rock 1:paper 2:scissor'))#press 0 for rock, 1 for paper, 2 for scissor
computer_input=random.randint(0,2)
if computer_input==user_input:
    print('its draw')
elif (computer_input==1 and user_input==0) or (computer_input==2 and user_input==1) or(computer_input==0 and user_input==2):
    print('computer wins\nbetter luck next time')
elif (computer_input==2 and user_input==0) or(computer_input==0 and user_input==1)or(computer_input==1 and user_input==2):
    print('congratulation you win')

else:
    print('invalid input')

print(f'the computer input is{computer_input}')
print(f'the user input is{user_input}')
